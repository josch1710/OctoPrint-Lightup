<h3>Light Up</h3>

<form class="form-horizontal">
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settings.plugins.LightUp.sequential"> {{ _('Sequential LEDs') }}
                <span class="help-block">{{ _('If enabled, the plugin tries to control sequentially.') }}</span>
            </label>
            <label class="control-label">{{ _('LED count') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.LightUp.ledcount">
            </div>
        </div>
    </div>
</form>